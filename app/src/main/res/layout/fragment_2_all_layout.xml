<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
   
    >
<!-- 科目-->
    <RadioGroup
        android:id="@+id/Fragment2_all_RG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <RadioButton
            android:id="@+id/Fragment2_all_RB_ke2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/fragment2_all_ke2ke3_rb_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="科目二"
            android:textColor="@drawable/fragment2_all_ke2ke3_textcolor_bg" />

        <RadioButton
            android:id="@+id/Fragment2_all_RB_ke3"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/fragment2_all_ke2ke3_rb_bg"
            android:button="@null"
            android:gravity="center"
            android:text="科目三 "
            android:textColor="@drawable/fragment2_all_ke2ke3_textcolor_bg" />
    </RadioGroup>
