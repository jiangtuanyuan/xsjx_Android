<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/fragment_5_roundhead_dialog_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="更换头像"
        android:textColor="#9d9d9d"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gary" />

    <TextView
        android:id="@+id/fragment_5_roundhead_dialog_paizhao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_bg2"
        android:gravity="center"
        android:text="拍       照"
        android:clickable="true"
        android:textColor="@color/blue"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gary" />

    <TextView
        android:id="@+id/fragment_5_roundhead_dialog_xiangce"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_bg2"
        android:gravity="center"
        android:text="从手机相册选择"
         android:clickable="true"
        android:textColor="@color/blue"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gary" />
    
     <TextView
        android:id="@+id/fragment_5_roundhead_dialog_quxiao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_bg2"
        android:gravity="center"
        android:text="取     消"
         android:clickable="true"
        android:textColor="#9d9d9d"
        android:textSize="15sp" />

</LinearLayout>