<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="1dp" >

    <LinearLayout
        android:id="@+id/coach_order_ke2_order_lv_showstuorder_dialog_item_li"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/coach_order_ke2_order_lv_showstuorder_dialog_item_num"
            android:layout_width="@dimen/red_circle_width"
            android:layout_height="@dimen/red_circle_height"
            android:layout_marginTop="1dp"
            android:background="@drawable/red_circle"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/red_circle_textsize"
            android:visibility="visible" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginLeft="3dp"
            android:background="@color/blue_user" />

        <TextView
            android:id="@+id/coach_order_ke2_order_lv_showstuorder_dialog_item_stuname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:text="星胜驾校"
            android:textColor="@drawable/fragment2_mycoach_bg" />
    </LinearLayout>
        
        
      
 
    <TextView
        android:id="@+id/coach_order_ke2_order_lv_showstuorder_dialog_item_state"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toLeftOf="@+id/coach_order_ke2_order_lv_showstuorder_dialog_item_re"
        android:layout_toRightOf="@id/coach_order_ke2_order_lv_showstuorder_dialog_item_li"
        android:clickable="true"
        android:gravity="center"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:layout_centerHorizontal="true"
        android:text="申请预约" />
        

    <LinearLayout
        android:id="@+id/coach_order_ke2_order_lv_showstuorder_dialog_item_re"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="3dp" >

        <TextView
            android:id="@+id/coach_order_ke2_order_lv_showstuorder_dialog_item_tongyi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/cehuabj"
            android:clickable="true"
            android:gravity="center"
            android:paddingTop="2dp"
            android:text="同 意"
            android:textColor="@color/green"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/coach_order_ke2_order_lv_showstuorder_dialog_item_jujue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/coach_order_ke2_order_lv_item_chakanRE"
            android:background="@drawable/cehuadele"
            android:clickable="true"
            android:gravity="center"
            android:text="拒 绝"
            android:textColor="@color/red"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/coach_order_ke2_order_lv_showstuorder_dialog_item_yjujue"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="您已拒绝"
            android:textColor="@color/gary"
            android:visibility="gone" />

        <TextView
            android:id="@+id/coach_order_ke2_order_lv_showstuorder_dialog_item_genggai"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:clickable="true"
            android:gravity="center"
            android:text="更改"
            android:textColor="@drawable/fragment2_mycoach_bg"
            android:visibility="gone" />
    </LinearLayout>

    <com.example.utils.CollapsibleTextView
        android:id="@+id/coach_order_ke2_order_lv_showstuorder_dialog_item_stuliuyan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
        android:layout_marginLeft="19dp"
        android:layout_marginRight="17dp"
        android:layout_below="@id/coach_order_ke2_order_lv_showstuorder_dialog_item_re"
       />


</RelativeLayout>