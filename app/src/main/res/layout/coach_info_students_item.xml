<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="left|center_vertical"
        android:padding="10dp"
        android:orientation="horizontal" >

        <com.example.utils.CircleImageView
            android:id="@+id/coach_info_students_item_img"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:src="@drawable/log" />

        <TextView
            android:id="@+id/coach_info_students_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
           android:textColor="@drawable/fragment2_mycoach_bg"
            android:text="蒋团圆" />

        <ImageView
            android:id="@+id/coach_info_students_item_sex"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/my_male" />

        <TextView
            android:id="@+id/coach_info_students_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学习中"
            android:layout_marginLeft="15dp"
            android:textSize="12sp"
            android:textColor="@color/green" />
        
    </LinearLayout>

</RelativeLayout>