<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Mesg_layou"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg"
    android:clickable="true"
    android:padding="10dp" >

    <TextView
        android:id="@+id/framgne_1_lv_left_blue"
        android:layout_width="7dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@color/blue_user" />

    <com.example.utils.MarqueeTextView
        android:id="@+id/framgne_1_lv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_toLeftOf="@+id/framgne_1_lv_datetiem"
        android:layout_toRightOf="@id/framgne_1_lv_left_blue"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="星胜驾校简介"
        android:layout_marginRight="3dp"
        android:textColor="@drawable/fragment2_mycoach_bg"
        android:textSize="14sp" />

    <!-- android:drawableLeft="@drawable/tabblue" -->

    <TextView
        android:id="@+id/framgne_1_lv_datetiem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="2017-09-06"
        android:textSize="12sp" />

</RelativeLayout>