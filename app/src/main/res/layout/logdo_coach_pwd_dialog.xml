<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/logdo_coach_pwd_dialog_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/blue"
        android:gravity="center"
        android:padding="5dp"
        android:text=" 请 输 入 教 练 密 钥 "
        android:textColor="@color/white"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/logdo_coach_pwd_dialog_et"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/edit_bg"
        android:inputType="number"
        android:digits="@string/filter_vcode"
        android:maxLength="32"
        android:textSize="15sp"
        android:hint="请输入今日教练密钥"
        android:padding="2dp" >
        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <Button
            android:id="@+id/logdo_coach_pwd_dialog_quxiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_bg"
            android:text="取  消"
            android:textSize="15sp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/logdo_coach_pwd_dialog_queding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
             android:textSize="15sp"
            android:background="@drawable/btn_bg"
            android:text="确  定"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>