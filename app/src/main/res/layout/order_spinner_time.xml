<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/Order_Spinner_time_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/layout_bg"
         >

        <TextView
            android:id="@+id/Order_Spinner_time_StartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />

        <TextView
            android:id="@+id/Order_Spinner_time_EndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:00" />
        
         <TextView
            android:id="@+id/Order_Spinner_time_Order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(已预约)" />
     <!--  
         <CheckBox 
             android:id="@+id/Order_Spinner_time_CheckBox"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            />
        -->
        
        
    </LinearLayout>

</RelativeLayout>