<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
     >

  <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/blue"
        android:padding="12dip"
        android:textColor="@color/white" >

        <ImageView
            android:id="@+id/Check_stand_fanhui"
            android:layout_width="22dp"
            android:layout_height="15dp"
            android:clickable="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/fanhui_item" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dip"
            android:paddingTop="15dp"
            android:text="星胜驾校-收银台"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/Check_stand_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="订单名称：报名学车-C1-经济班" />

    <TextView
        android:id="@+id/Check_stand_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="订单数量：1" />

      <TextView
        android:id="@+id/Check_stand_tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="订单所属用户：张三" />
    <TextView
        android:id="@+id/Check_stand_tv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="订单总价：3480.00¥ (RMB)" />

    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"   
        android:background="@color/gary"
        android:padding="5dp"
        android:text="支付方式:" />

    <RadioGroup
        android:id="@+id/check_RG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp" >

        <RadioButton
            android:id="@+id/check_Rb1"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/checkstand_wx"
            android:button="@null"
            android:checked="true" />

        <RadioButton
            android:id="@+id/check_Rb2"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="@drawable/checkstand_zfb"
            android:layout_marginRight="5dp"
            android:button="@null" />
    </RadioGroup>

    <Button
        android:id="@+id/check_stand_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/btn_bg"
        android:text="支付 3840.00元"
        android:textSize="16sp"
        android:textColor="@color/white" />

    
     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="5dp"
        android:text="提示:\n订单支付成功后，订单编码将是您的唯一凭据,请你妥善保管!详情可以在'我的'-'我的订单'中查看!" />
    
</LinearLayout>